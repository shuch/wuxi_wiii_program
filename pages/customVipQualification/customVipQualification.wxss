page {
  background: url(http://pjrpw22gp.bkt.clouddn.com/bg-c.png) center bottom/100% no-repeat fixed;
}

.title {
  position: relative;
  font-size: 32rpx;
  line-height: 60rpx;
  margin: 70rpx 100rpx 0;
  text-align: center;
  font-weight: bold;
  letter-spacing: 2px;
  border-bottom: 2px solid rgba(213,195,150,1);
}

.title::after {
  content: '';
  display: block;
  position: absolute;
  bottom: -12rpx;
  width: 100%;
  border-top: 1px solid rgba(213,195,150,1);
}

.card-list {
  margin: 260rpx 90rpx 0;
}

.card {
  display: flex;
  align-items: center;
  position: relative;
  background: #fff;
  border-radius: 4rpx;
  line-height: 1;
  box-shadow: 0 0 30rpx 6rpx rgba(0,0,0,.1);
  margin-bottom: 60rpx;
  min-height: 160rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 0 30rpx;
  flex-shrink: 0;
}

.card-title {
  font-size: 24rpx;
  color: #D5C396;
  line-height: 34rpx;
  margin-bottom: 14rpx;
}

.intro {
  position: relative;
  color: #9b9b9b;
  font-size: 22rpx;
  line-height: 30rpx;
  padding: 24rpx 48rpx 28rpx 30rpx;
}

.intro:before {
  position: absolute;
  left: 0;
  top: 16rpx;
  content: '';
  display: block;
  border-left: 1px solid #eee;
  height: 80%;
}

.btn {
  width: 520rpx;
  margin: 240rpx auto 0;
  color: #fff;
  font-size: 28rpx;
  padding: 0 24rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #D5C396;
  border-radius: 40rpx;
  letter-spacing: 4rpx;
  border: none;
  outline: none;
}

.btn:after {
  border: none;
}

.im {
  display: inline-block;
  vertical-align: middle;
  width: 44rpx;
  height: 36rpx;
}