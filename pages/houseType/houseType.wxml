<scroll-view class="contain" wx:if="{{list.length>0}}">
    <movable-area style="height: 120rpx; width: 100%;" class="top_flex">
        <movable-view class="top" style="width:{{list.length>3?list.length*212+'rpx':'100%'}}" direction="horizontal">
            <view wx:for="{{list}}" wx:key="index" id="{{index}}" bindtap="checkOutHouse" data-id="{{item.id}}" data-name="{{item.name}}" class="{{list.length==1?'item1':list.length==2?'item2':list.length==3?'item3':'item4'}}" style="background:{{active==index? 'linear-gradient(-270deg, '+jbColor1+' 0%, '+jbColor2+' 100%);border: 2rpx solid #FFFFFF;opacity:1':'#272A34'}}">{{item.name}}</view>
        </movable-view>
    </movable-area>
    <view class="list">
        <view class="listItem" wx:for="{{houseList}}" wx:key="index" bindtap="goDetail" data-id="{{item.id}}" data-index="{{index}}">
            <image src="{{item.layoutImageResponseList[0].imageUrl}}" class="left"  mode="aspectFill"></image>
            <view class="right">
                <image src="{{serverUrl}}houseType/{{item.backgroundNumber}}.png"  mode="widthFix"></image>
                <view class="shade" style="background-image: linear-gradient(-180deg, {{shade1}} 0%, {{shade2}} 100%);">
                    <view class="top1">
                        <view class="graph">
                            {{item.area}}<i class="m">M²</i>
                        </view>
                        <i class="tip">面积约</i>
                    </view>
                    <view class="bottom">
                        <i class="useRoom">{{item.room?item.room+'室':''}}{{item.hall?item.hall+'厅':''}}{{item.kitchen?item.kitchen+'厨':''}}{{item.toilet?item.toilet+'卫':''}}</i>
                        <text>{{item.propertyType}} | {{item.floorHeight}}M | {{item.orientation}}</text>
                    </view>
                </view>
            </view>
        </view>
    </view>
</scroll-view>


<view class="none" wx:else>
    暂无户型信息
</view>
