.container {
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.section {
	position: relative;
	background: #FFF;
}

.section-img {
	width: 100%;
	height: 340rpx;
	vertical-align: top;
}

.icon-like {
	position: absolute;
	bottom: 34rpx;
	right: 40rpx;
	width: 40rpx;
	height: 40rpx;
	vertical-align: top;
}

.like-box {
	display: flex;
	font-size: 28rpx;
	color: #9B9B9B;
	align-items: center;
	margin: 10rpx 40rpx 0;
	padding: 20rpx 18rpx;
	border-radius: 8rpx;
	box-shadow: 0 0 15px 2px rgba(0,0,0,.1)
}

.like-list {
	flex: 1;
}

.like-avatar {
	width: 50rpx;
	height: 50rpx;
	border-radius: 50%;
	vertical-align: top;
	margin-right: 20rpx;
}

.theme-color {
	color: #FFD6BA;
}

.row-tabs {
	display: flex;
	align-items: flex-end;
	margin-top: 66rpx;
	padding: 0 50rpx;
}

.tabs {
	font-size: 28rpx;
	margin-right: 30rpx;
	color: rgba(0,0,0,.4);
	font-weight: bold;
}

.tabs-active {
	position: relative;
	color: #2E2E2E;
	font-size: 36rpx;
}

.tabs-active::after {
	position: absolute;
	left: 50%;
	transform: translateX(-50%);
	bottom: -20rpx;
	content: '';
	width: 63rpx;
	height: 8rpx;
	border-radius: 4rpx;
	background-image: linear-gradient(19deg, #EDD48D, #B78D4C);
	color: #2E2E2E;
	font-size: 36rpx;
}

.pane {
	position: relative;
	overflow: hidden;
}

.center-img {
  margin: 60rpx auto 123rpx;
  display: block;
}

.custom-img {
	width: 100%;
	/*height: auto;*/
}

.space-img {
	width: 690rpx;
	height: 900rpx;
}

.space-indicator {
  display: flex;
  position: absolute;
  top:335rpx;
  right:146rpx;
}

.space-left-top {
  left: 100rpx;
  top: 200rpx;
}

.space-left-bottom {
  left: 200rpx;
  top: 700rpx;
}

.space-center {
  left: 300rpx;
  top: 300rpx;
}

.space-center-top {
  left: 300rpx;
  top: 200rpx;
}

.space-center-bottom {
  left: 300rpx;
  top: 700rpx;
}

.space-name {
  padding: 0 15rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 50rpx;
  border-radius: 25rpx 0 0 25rpx;
  background: rgba(42, 69, 59, .7);
}

.space-plus {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.comment-area {
  position: absolute;
  top: 50%;
  left: 45rpx;
  width: 100%;
  max-width: 70%;
  height: 50%;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
}

.comment-unfold {
  top:814rpx;
}

.comment-title {
  color: #2E2E2E;
  margin-bottom: 20rpx;
}

.comment-list {
}

.comment-item {
  display: table;
  color: #fff;
  line-height: 50rpx;
  padding: 0 10rpx;
  margin-bottom: 30rpx;
  border-radius: 6rpx;
  background: rgba(155, 155, 155, .8);
}

.icon-close {
  width: 28rpx;
  height: 28rpx;
  margin-left: 20rpx;
  vertical-align: middle;
}

.section-rank {
	padding: 30rpx 40rpx;
	margin-top: 20rpx;
}

.section-title {
	display: flex;
	align-items: center;
	font-weight: bold;
	font-size: 36rpx;
	line-height: 50rpx;
	color: #2E2E2E;
}

.section-more {
	font-size: 24rpx;
	color: #9B9B9B
}

.flex-1 {
	flex: 1;
}

.icon-right {
	width: 12rpx;
	height: 22rpx;
	margin-left: 10rpx;
}

.rank-star {
	display: flex;
	flex-wrap: nowrap;
	overflow-x: scroll;
	margin-top: 50rpx;
	margin-bottom: 36rpx;
}

.rank-star-box {
	background: #FFFFFF;
	margin-right: 40rpx;
	box-shadow: 1px 1px 1px 1px rgba(213,213,213,0.47);
	position: relative;
}

.rank-star-album {
	position: relative;
}

.rank-star-img {
	width: 270rpx;
	height: 256rpx;
	vertical-align: top;
}

.rank-star-info {
	display: flex;
	font-size: 22rpx;
	color: #9B9B9B;
	align-items: center;
	padding-bottom: 14rpx;
	position: relative;
	z-index: 1;
}

.rank-star-avatar {
	width: 36rpx;
	height: 36rpx;
	margin-right: 10rpx;
	margin-left: 17rpx;
	border-radius: 50%;
}

.section-banner {
	margin-top: 20rpx;
}

.banner {
	width: 100%;
	height: 230rpx;
	vertical-align: top;
}

.bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 100rpx;
  color: #fff;
  font-size: 36rpx;
}

.service {
	background: #606060;
	width: 90rpx;
}

.icon-service {
	width: 60rpx;
	height: 60rpx;
}

.center {
	display: flex;
	align-items: center;
	justify-content: center;
}

.btn-grey {
	background-image: linear-gradient(190deg, #5B5B5B 0%, #777777 68%);
}

.btn-glod {
	background-image: linear-gradient(35deg, #EDD48D 45%, #B78D4C 100%);
}

.custom-like {
	position: absolute;
	top: 15rpx;
	right: 15rpx;
	display: flex;
	flex-direction: column;
	align-items:center;
	font-size: 32rpx;
	color: #FFFFFF;
}

.icon-like-rank {
	width: 40rpx;
	height: 40rpx;
	vertical-align: top;
}
