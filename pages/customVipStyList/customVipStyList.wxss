page {
  background: url(http://pjrpw22gp.bkt.clouddn.com/bg-c.png) center bottom/100% no-repeat fixed;
}

.title {
  position: relative;
  font-size: 32rpx;
  line-height: 60rpx;
  margin: 70rpx 100rpx 0;
  text-align: center;
  font-weight: bold;
  letter-spacing: 2px;
  border-bottom: 2px solid rgba(213,195,150,1);
}

.title::after {
  content: '';
  display: block;
  position: absolute;
  bottom: -12rpx;
  width: 100%;
  border-top: 1px solid rgba(213,195,150,1);
}

.card-list {
  margin: 90rpx 30rpx 0;
}

.card {
  position: relative;
  background: #fff;
  padding: 16rpx 30rpx 30rpx;
  border-radius: 4rpx;
  line-height: 1;
  box-shadow: 0 0 30rpx 6rpx rgba(0,0,0,.1);
  margin-bottom: 110rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
  margin-top: -30rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.card-title {
  font-size: 24rpx;
  color: #4D4D4D;
  margin-left: 85rpx;
  display: inline-block;
  vertical-align: top;
  line-height: 34rpx;
}

.intro {
  text-indent: 2em;
  margin-top: 25rpx;
  color: #9b9b9b;
  font-size: 28rpx;
  line-height: 40rpx;
}

.btn {
  width: 242rpx;
  margin-top: 5rpx;
  margin-left: auto;
  margin-right: 0;
  color: #fff;
  font-size: 28rpx;
  padding: 0 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #D5C396;
  border-radius: 30rpx;
  letter-spacing: 2rpx;
  border: none;
  outline: none;
}

.btn:after {
  border: none;
}

.im {
  display: inline-block;
  vertical-align: middle;
  width: 44rpx;
  height: 36rpx;
}