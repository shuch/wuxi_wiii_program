.bottom-box{
  display: flex;
  width:100%;
  position: fixed;
  bottom:0;
  height: 98rpx;
 padding-top:12rpx;
  background:#FFF;
  justify-content: space-around;
}

.input-box{
  border:0px;
  color: #4D4D4D;
  padding-left:13rpx;
  background: #F6F6F6;
  width: 95%;
  border: none;
  height: 74rpx;
}
.message-box{
  height:100%;
}
.failed{
  position: absolute;
  top:calc(50% - 10px);
  left:-30px;
  width:20px;
  height:20px;
}

.title{
  z-index:2;
  background: #eee;
  font-weight: bold;
  width:100%;
  height:40px;
  position: fixed;
  justify-content: center;
  top:0;
  text-align: center;
  display: flex;
  align-items: center;
}
.title .back-button{
  width:20px;
  height:20px;
  overflow: hidden;
  padding-left:20px;
}
.title .back-button image{
  width:15px;
  height:15px;
}
.title .ad-name{

  display: flex;
  justify-content: center;
  align-items: center;

}
.ad-name image{
  margin-right:3px;
  width:10px;
  height:10px;
}

.send{
  color:#fff;
  line-height: 32px;
  height: 32px;
  width:auto;
  margin-left:5px;
}
.message-text{
  margin-bottom:20px;
  position: relative;
  box-sizing: border-box;
  display: flex;
}
.text-content1{
  position: relative;
  overflow:hidden;
  word-wrap: break-word;
  background-color: #fff;
  border-radius: 5px;
}
.right{
 margin-right:10px;
 justify-content: flex-end;
}
