.hei{
  height:98rpx;
}
.loadData{
  width:100px;
  height:100px;
  position: fixed;
  left: 50%;
  top:50%;
  transform: translate(-50%,-50%);
  background: rgba(0,0,0,0.6);
  border-radius: 10px;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content:center;
}
.dialog{
  z-index:20;
  position: fixed;
  top:0;
  left:0;
  background: rgba(0,0,0,0.9);
  width:100%;
  height:100%;
  display: flex;
  align-items: center;
}
image{
  display:block;
}
.line-box{
  justify-content: center;
  font-size: 14px;
  color:#cccccc;
  width:90%;
  margin: 45px auto 0;
  height:40px;
  display: flex;
  align-items: center;
}
.line{

  width:25%;
  border-bottom:1px solid #cccccc;
}
.line-text{
  text-align: center;
  white-space:nowrap;
  box-sizing: border-box;
  padding:0 10px 0 10px;
  line-height: 40px;
  height:40px;
}
.video-text{
 width:100%;
  height:30px;
  padding-left:3px;
  font-size:14px;
  line-height: 30px;
  color:#Fff;
  background: #656565;
}
.down-box{
  border-top:1px solid #999999;
  display:flex;

}
.deny-button{
  width:50%;
  background: #fff;
  border-right:0px;
  color:#999999;
  border-radius: 0px;
}
.admit-button{
  width:50%;
  color:#999999;
  border-radius: 0px;
  background:#fff;
}
.full-screen{
  height: 166rpx;
}