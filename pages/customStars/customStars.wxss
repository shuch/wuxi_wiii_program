.container {
	background: #f5f5f5;
}

.section-img {
	width: 100%;
	height: 200rpx;
	vertical-align: top;
}

.custom-item {
	color: #2E2E2E;
	font-size: 32rpx;
	margin-bottom: 20rpx;
}

.section-btn {
	float: right;
	line-height: 48rpx;
	padding: 0 24rpx;
	text-align: center;
	border-radius: 6rpx;
	font-size: 32rpx;
	color: #2E2E2E;
	font-weight: normal;
	border: 1px solid #2E2E2E;
}

.custom-card {
	background: #fff;
	border-radius: 6rpx;
	box-shadow: 0 2px 3px 0 rgba(206,206,206,0.50);
}

.custom-card-box {
	position: relative;
}

.custom-item-img {
	width: 670rpx;
	height: 284rpx;
	vertical-align: top;
	border-radius: 6rpx 6rpx 0 0;
}

.custom-feature-list {
	position: absolute;
	bottom: 0;
	width: 100%;
	display: flex;
	padding-left: 10rpx;
	background: #fff;
}

.custom-feature {
	line-height: 40rpx;
	padding: 0 18rpx;
	border-radius: 20rpx;
	text-align: center;
	font-size: 24rpx;
	color: #9B9B9B;
	border: 1px solid #9B9B9B;
	margin-right: 10rpx;
}
.custom-item-info {
	padding: 18rpx 20rpx 12rpx;
	font-size: 24rpx;
	color: #D5D5D5;
	line-height: 50rpx;
}

.custom-item-rank {
	font-size: 36rpx;
	color: #2E2E2E;
	font-weight: bold;
	margin-right: 20rpx;
}

.custom-rank {
	font-size: 28rpx;
	color: #9B9B9B;
	line-height:50rpx;
	margin: 30rpx 0 10rpx;
}

.red {
	color: red;
}

.custom-like {
	position: absolute;
	top: 15rpx;
	right: 15rpx;
	display: flex;
	flex-direction: column;
	align-items:center;
	font-size: 32rpx;
	color: #FFFFFF;
}

.icon-like {
	width: 40rpx;
	height: 40rpx;
	vertical-align: top;
}

.section-rank {
	margin: 50rpx 40rpx 0;
}