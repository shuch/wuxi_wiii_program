.title-box{
	width:100%;
	height:70px;
	display:flex;
	box-sizing: border-box;
	padding:10px 20px 10px 20px;
	justify-content: space-between;
	align-items: center;
}
.title-text{
	line-height: 50px;
  font-size:32px;
  font-weight:bold;
  height:50px;
}
.title-right{
    height:35px;
	width:50px;
	overflow: hidden;
}
.title-right image{
	height:35px;
	width:50px;
}
.message-box{
	border-bottom:1px solid #cccccc;
	box-sizing: border-box;
	margin-left:20px;
	width:calc(100% - 20px);
	height:80px;
	display:flex;
	padding-right:20px;
	align-items: center;
	justify-content: flex-start;
}
.message-right-box{
	flex:1;
}
.message-right-top{
	display:flex;
	justify-content: space-between;
}
.last-message-time{
	color:#999999;
}
.name{
	margin-left:10px;
	font-weight: bold;
}
.message-right-bottom{
	margin-left: 10px;
	color:#999999;
}
.message-text{
	text-overflow: ellipsis;
	white-space:nowrap;
	overflow: hidden;
	width:250px;
}
.message-box .head-box{
	position: relative;
	width:60px;
	height:60px;
	overflow: hidden;
}
.head-box .newRed{
	z-index:20;
	width:15px;
	height:15px;
	color:#fff;
	top:2px;
	right:4px;
	font-size:14px;
	border-radius: 50%;
	background: red;
	text-align: center;
	line-height: 15px;
	position:absolute;
}
.head-box image{
    border-radius:100%;
	width:60px;
	height:60px;
}
.more-adviser{
   	height:60px;
	width:100%;
	display:flex;
	align-items: center;
	justify-content: center;
	border-top: 1px solid #fff;
	margin-top:-1px;
}
.more-adviser image{
	width:326px;
	height:31px;
}
.loadData{
	width:100px;
	height:100px;
	position: absolute;
	left: 50%;
	top:50%;
	transform: translate(-50%,-50%);
	background: rgba(0,0,0,0.6);
	border-radius: 10px;
	z-index: 1000;
	display: flex;
	align-items: center;
	justify-content:center;
}
.fixImg{
	width:100%;
	position: fixed;
	left:0;
	bottom:0;
	z-index:10;
}
.mask{
	position:fixed;
	top:0px;
	left:0px;
	width:100vw;
	height:100vh;
	background-color:rgba(155,155,155,0.6);
	z-index:15;
}
.model{
	position:absolute;
	width:80vw;
	left:10vw;
	top:20vh;
	border-radius:20rpx;
	background-color:white;
	z-index:16;
}
.model .modelTitle{
	width:100%;
	padding:20rpx 0rpx;
	font-size:40rpx;
	text-align:center;
	color:block;
	border-bottom:1rpx solid rgb(237,237,237);
}
.model .modelBody{
	box-sizing: border-box;
	width:100%;
	padding:50rpx 50rpx;
	text-align:center;
	color:rgb(178,178,178);
	font-size:30rpx;
	border-bottom:1rpx solid rgb(237,237,237);
}
.model .btns{
	width:100%;
	text-align:center;
}
.model .btns .agree{
	border-width:0px;
	color:rgb(26,172,25);
	/*width:100%;*/
}
